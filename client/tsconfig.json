{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "module": "ESNext",
        "skipLibCheck": true,

        /* Aliases */
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"],
            "@/assets/*": ["assets/*"],
            "@/components/*": ["./src/components/*"],
            "@/containers/*": ["./src/containers/*"],
            "@/features/*": ["./src/features/*"],
            "@/hooks/*": ["./src/hooks/*"],
            "@/layout/*": ["./src/layout/*"],
            "@/pages/*": ["./src/pages/*"],
            "@/store/*": ["./src/store/*"],
            "@/lib/*": ["./src/lib/*"],
            "@/utils/*": ["./src/utils/*"],
            "@/constant/*": ["./src/constant/*"]
        },

        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        "jsx": "react-jsx",

        /* Linting */
        "strict": true,
        "noUnusedLocals": false, // Set to false temporarily
        "noUnusedParameters": false, // Set to false temporarily
        "noFallthroughCasesInSwitch": true
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
}
